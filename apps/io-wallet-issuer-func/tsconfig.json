{
  "exclude": ["dist"],
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES2021",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "src",
    "paths": {
      "@/*": ["./src/*"]
    },

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Donâ€™t sweat 3rd-party .d.ts files */
    "skipLibCheck": true
  }
}
