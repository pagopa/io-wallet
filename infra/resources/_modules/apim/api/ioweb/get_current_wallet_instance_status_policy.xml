<policies>
    <inbound>
        <base />
        <set-method>GET</set-method>
        <set-header name="fiscal-code" exists-action="override">
            <value>@((string)context.Variables["fiscalCode"])</value>
        </set-header>
    </inbound>
    <outbound>
        <base />
        <set-body template="liquid">
            {
                "id": "{{body.id}}",
                "is_revoked": {{body.is_revoked}}
            }
        </set-body>
    </outbound>
</policies>