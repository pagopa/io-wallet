<policies>
    <inbound>
        <base />
        <set-method>GET</set-method>
        <rewrite-uri template="@($"/whitelisted-fiscal-code/{context.Variables["fiscalCode"]}")" />
    </inbound>
    <outbound>
        <base />
        <set-body template="liquid">
            {
                "is_whitelisted": {{body.whitelisted}}
            }
        </set-body>
    </outbound>
</policies>