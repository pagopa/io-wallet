<policies>
    <inbound>
        <base />
        <!-- validate the jwt using the specified OpenID configuration URLs -->
        <validate-jwt header-name="Authorization" require-scheme="Bearer">
            <openid-config url="https://wallet.io.pagopa.it/pdnd/openid-configuration" />
        </validate-jwt>
        <!-- forwards the call to the Function App -->
        <set-header name="x-functions-key" exists-action="override">
            <value>{{io-wallet-user-func-key}}</value>
        </set-header>
    </inbound>
    <outbound>
        <base />
    </outbound>
    <backend>
        <base />
    </backend>
    <on-error>
        <base />
    </on-error>
</policies>