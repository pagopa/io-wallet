{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "inputs": ["src/**/*.ts"],
      "outputs": ["dist/**"],
      "outputLogs": "errors-only",
      "dependsOn": ["^build"]
    },
    "typecheck": {
      "inputs": ["src/**/*.ts"],
      "dependsOn": ["^build"]
    },
    "format": {},
    "lint": {
      "inputs": ["src/**/*.ts"]
    },
    "lint:fix": {
      "inputs": ["src/**/*.ts"]
    },
    "test": {
      "inputs": ["src/**/*.spec.ts"],
      "dependsOn": ["^build"],
      "outputLogs": "errors-only"
    }
  }
}
